extends layout
block content
    div.row
        button#Toggle-form
            i.fa.fa-align-justify
        div#Form.col-sm-3(style="display:none")
            div.row
                h1 FORM
            table(class="table table-hover")
                tbody
                    tr.row
                        td.col-sm-4.form-label CategoryID:
                        td.col-sm-8
                            input#CategoryID.form-input(name="CategoryID")
                    tr.row
                        td.col-sm-4(class="form-label") Name:
                        td.col-sm-8
                            input#Name.form-input(name="Name")
                    tr.row
                        td.col-sm-4.form-label Description:
                        td.col-sm-8
                            input#Description.form-input(name="Description")
                    tr.row
                        td.col-sm-4.form-label FAirNetID:
                        td.col-sm-8
                            input#FAirNetID.form-input(name="FAirNetID")
                    tr.row
                        td.col-sm-4.form-label DataSheet:
                        td.col-sm-8
                            input#DataSheet.form-input(name="DataSheet")
            hr
            div.form-group.form-button
                button#Add(class="btn btn-primary" onclick="javascript:uploadData()") ADD
                button#Search(class="btn btn-secondary" onclick="javascript:searchData()") SEARCH
            hr
            div.form-group.form-button
                button#Previous(class="btn btn-dark" onclick="javascript:previous()") <<<
                button#Next(class="btn btn-dark" onclick="javascript:next()") >>>



        div#Data.col
            h1 CATEGORY DATA
            table.table
                thead
                    tr.d-flex.col-md-12.row
                        th.col-md-1 ID
                        th.col-md-2 Tên
                        th.col-md-2 Mô tả
                        th.col-md-2 FAirNetID
                        th.col-md-2 DataSheet
                        th.col-md-1 Số lượng
                        th.col-md-2 Thao tác
                tbody#Data-row
    script.
        var categoryData = !{JSON.stringify(categoryData)};
    script(src="/javascript/category.js")




